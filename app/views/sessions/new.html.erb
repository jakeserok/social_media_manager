<h1>Sign In</h1>

<%= form_with url: sign_in_path do |form| %>
  <div class="mb-3">
    <%= form.label :email%>
    <%= form.text_field :email, class: "form-control", placeholder: "example@google.com" %>
  </div>

  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    <%= link_to "Forgot your password?", password_reset_path %>
  </div>
  
  <div class="mb-3">
    <%= form.submit "Sign In", class: "btn btn-primary"%>
  </div>
<% end %>
<div>
  <p class="bold">Or</p>
  <%= link_to "/auth/google_oauth2", id: "sign_in", method: :post do %>
    <%= image_tag "btn_google_signin_dark_pressed_web" %>
  <% end %>
</div>